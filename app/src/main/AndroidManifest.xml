<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.opengapps.opengapps">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECOVERY" />

    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity
            android:name=".Stepper"
            android:label="DEMO" />
        <activity
            android:name=".intro.AppIntroActivity"
            android:label="AppIntro"
            android:parentActivityName=".NavigationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavigationActivity" />
        </activity>
        <activity
            android:name=".prefs.Preferences"
            android:label="Preferences"
            android:parentActivityName=".NavigationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavigationActivity" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="About"
            android:parentActivityName=".NavigationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavigationActivity" />
        </activity>
        <activity
            android:name=".NavigationActivity"
            android:label="@string/app_name"
            android:theme="@style/SpecialNavD">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Google Mobile Ads activity. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@style/MyTheme"
            tools:replace="android:theme" />
        <activity
            android:name=".SupportActivity"
            android:label="@string/label_support"
            android:parentActivityName=".NavigationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavigationActivity" />
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="org.opengapps.opengapps.AboutActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/opengapps_large"
            android:id="@+id/logo_large"
            app:layout_constraintLeft_toLeftOf="@+id/content_about"
            app:layout_constraintTop_toTopOf="@+id/content_about"
            android:layout_margin="16dp"
            app:layout_constraintRight_toRightOf="@+id/content_about"
            android:contentDescription="@string/app_name" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/content_about"
            app:layout_constraintRight_toRightOf="@id/content_about"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/logo_large">

            <include layout="@layout/content_about" />
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/label_download">

        <SwitchPreference
            android:defaultValue="true"
            android:title="@string/label_wifi_only"
            android:key="download_wifi_only"
            android:summary="@string/summary_wifi_only" />
        <org.opengapps.opengapps.prefs.FileChooserPref
            android:defaultValue="/sdcard/Download"
            android:title="@string/label_download_dir"
            android:key="download_dir"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Flashing">

        <CheckBoxPreference
            android:defaultValue="false"
            android:title="@string/label_wipe_cache"
            android:key="wipe_cache" />
    </PreferenceCategory>
</PreferenceScreen>